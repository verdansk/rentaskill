<%= simple_form_for(skill) do |f| %>
  <%= f.input :name, label: 'Select your skills' %>
  <%= f.input :description, label: 'Describe your skills.' %>
  <%= f.input :category, collection: ["front-end", "back-end", "full-stack", "data-science", "design", "product management"],
                            label: "Select the category that best describes your skills" %>
  <%= f.input :price_per_day, label: 'Specifiy daily rate.' %>
  <%= f.button :submit ,id: "btn-add-skill"%>
<% end %>
