
      <%= simple_form_for([skill,booking]) do |f| %>
      <%= f.input :date_start, as: :date , html5: true %>
      <%= f.input :date_end, as: :date , html5: true %>
      <%= f.input :price, readonly: true ,input_html: {value: f.object.price || skill.price_per_day}%>
      <%= f.submit "Book new", class: "btn btn-primary book-skill-btn" %>
      <% end %>

<script>

const selectElement = document.getElementById('booking_date_end');
const result = document.getElementById('booking_price');
const blabla = result.value;

selectElement.addEventListener('change', (event) => {
  const date_start = new Date(document.getElementById('booking_date_start').value);
  const date_end = new Date(document.getElementById('booking_date_end').value);
  const diffTime = Math.abs(date_end - date_start);
  const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
  const total_price = diffDays * parseInt(blabla);
  result.value = total_price ;
});

</script>
